{
  "manifest_version": 3,
  "name": "Waterloo Login Helper - SAFE VERSION",
  "version": "1.1",
  "description": "Safe version with error handling",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://adfs.uwaterloo.ca/*",
    "*://learn.uwaterloo.ca/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://adfs.uwaterloo.ca/*", "*://learn.uwaterloo.ca/*"],
      "js": ["content-safe.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "UW Login Helper - SAFE"
  }
}

