{
  "manifest_version": 3,
  "name": "Waterloo Learn Auto-Login Helper",
  "version": "1.0",
  "description": "Automatically fills your Waterloo Learn credentials to save time and hassle!",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://learn.uwaterloo.ca/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://learn.uwaterloo.ca/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Waterloo Login Helper"
  }
}